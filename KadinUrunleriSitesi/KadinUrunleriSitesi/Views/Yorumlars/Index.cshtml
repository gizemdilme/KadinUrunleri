@model IEnumerable<KadinUrunleriSitesi.Models.Yorumlar>

@{
    ViewData["Title"] = "Yorumlar";
}

<h1 class="text-center text-pink my-4">Yorumlar</h1>

<p class="text-center">
    <a asp-action="Create" class="btn btn-pink">Yeni Yorum Ekle</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th class="text-pink">
                @Html.DisplayNameFor(model => model.Icerik)
            </th>
            <th class="text-pink">
                @Html.DisplayNameFor(model => model.YorumTarihi)
            </th>
            <th class="text-pink">
                @Html.DisplayNameFor(model => model.Kullanici)
            </th>
            <th class="text-pink">
                @Html.DisplayNameFor(model => model.Urun)
            </th>
            <th class="text-center">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-pink">
                    @Html.DisplayFor(modelItem => item.Icerik)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.YorumTarihi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Kullanici.KullaniciId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Urun.UrunId)
                </td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.YorumId" class="btn btn-sm btn-info mx-1">Düzenle</a> |
                    <a asp-action="Details" asp-route-id="@item.YorumId" class="btn btn-sm btn-primary mx-1">Detaylar</a> |
                    <a asp-action="Delete" asp-route-id="@item.YorumId" class="btn btn-sm btn-danger mx-1">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    body {
        background-color: #f8bbd0; /* Pembe tonlarında bir arka plan */
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    h1 {
        color: #e91e63; /* Pembe tonları */
        font-weight: 600;
    }

    .btn-pink {
        background-color: #e91e63; /* Pembe buton */
        color: white;
        border: none;
        border-radius: 5px;
        padding: 8px 16px;
    }

        .btn-pink:hover {
            background-color: #d81b60; /* Daha koyu pembe tonunda hover efekti */
            transition: background-color 0.3s ease;
        }

    .table {
        background-color: #fff;
        border-radius: 10px;
        overflow: hidden;
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #fce4ec; /* Açık pembe satır arka planı */
    }

    .table-hover tbody tr:hover {
        background-color: #f8bbd0; /* Hoverda pembe tonları */
    }

    .table th {
        color: #e91e63; /* Pembe başlık yazıları */
    }

    .table td {
        color: #8b005d; /* Koyu pembe metin rengi */
    }

    .btn {
        border-radius: 5px;
        font-weight: bold;
        padding: 5px 10px;
    }

    .btn-info {
        background-color: #03a9f4; /* Mavi buton */
        color: white;
    }

        .btn-info:hover {
            background-color: #0288d1;
        }

    .btn-primary {
        background-color: #2196f3; /* Mavi buton */
        color: white;
    }

        .btn-primary:hover {
            background-color: #1976d2;
        }

    .btn-danger {
        background-color: #f44336; /* Kırmızı buton */
        color: white;
    }

        .btn-danger:hover {
            background-color: #d32f2f;
        }

    .mx-1 {
        margin-left: 5px;
        margin-right: 5px;
    }
</style>
