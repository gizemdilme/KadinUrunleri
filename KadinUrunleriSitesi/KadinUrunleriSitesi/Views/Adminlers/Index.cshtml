@model IEnumerable<KadinUrunleriSitesi.Models.Adminler>
@{
    ViewData["Title"] = "Admin Paneli";
}

<h2 class="mb-4">Admin Listesi</h2>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Kullanıcı Adı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.AdminId</td>
                <td>@item.KullaniciAdi</td>
                <td>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.AdminId">Düzenle</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.AdminId">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-outline-primary" asp-action="Create">Yeni Admin Ekle</a>
