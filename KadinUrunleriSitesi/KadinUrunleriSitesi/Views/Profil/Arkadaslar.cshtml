@model List<ArkadaslarViewModel>

@{
    ViewData["Title"] = "Arkadaşlarım";
}

<div class="container mt-4">
    <h3 class="mb-4">Arkadaşlarım</h3>

    @if (Model.Count == 0)
    {
        <div class="alert alert-warning">Henüz hiç arkadaşınız yok.</div>
    }
    else
    {
        <div class="row">
            @foreach (var arkadas in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm text-center">
                        <img src="@arkadas.ProfilFotoUrl ?? " /images/default-profile.png"" class="card-img-top rounded-circle mx-auto mt-3" style="width: 100px; height: 100px; object-fit: cover;" />
                        <div class="card-body">
                            <h5 class="card-title">@arkadas.AdSoyad</h5>
                            <a asp-action="Detay" asp-route-id="@arkadas.KullaniciId" class="btn btn-outline-primary btn-sm">Profili Gör</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
